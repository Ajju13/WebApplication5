@{
    ViewBag.Title = "Unauthorized Access";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Unauthorized Access</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f8f8f8;
            margin: 0;
        }

        .unauthorized-container {
            text-align: center;
            background-color: #ffffff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .stop-sign {
            display: inline-block;
            width: 100px;
            height: 100px;
            background-color: #ff4c4c;
            color: white;
            font-weight: bold;
            font-size: 24px;
            line-height: 100px;
            border-radius: 10px;
            transform: rotate(45deg);
            margin-bottom: 20px;
            position: relative;
        }

        .stop-sign-content {
            transform: rotate(-45deg);
        }

        h2 {
            margin: 20px 0;
            color: #333;
        }

        p {
            color: #666;
        }

        .home-link {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .home-link:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="unauthorized-container">
        <div class="stop-sign">
            <div class="stop-sign-content">
                STOP
            </div>
        </div>
        <h2>Unauthorized</h2>
        <p>You do not have permission to view this page.</p>
        <a href="@Url.Action("Index", "Home")" class="home-link">Go to Login</a>
    </div>
</body>
</html>
