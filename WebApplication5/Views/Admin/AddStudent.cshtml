@model WebApplication5.Models.Student

@{
    ViewBag.Title = "AddStudent";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<h2>Add Student</h2>

@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.SuccessMessage
    </div>
}

@using (Html.BeginForm("AddStudent", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="form-container">
                    <h4>Student Details</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        Student ID:
                        @Html.EditorFor(model => model.StudentId, new { htmlAttributes = new { @class = "form-control", placeholder = "Student ID" } })
                        @Html.ValidationMessageFor(model => model.StudentId, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        Student Email:
                        @Html.EditorFor(model => model.StudentEmail, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
                        @Html.ValidationMessageFor(model => model.StudentEmail, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        Student Phone:
                        @Html.EditorFor(model => model.StudentPhone, new { htmlAttributes = new { @class = "form-control", placeholder = "Phone" } })
                        @Html.ValidationMessageFor(model => model.StudentPhone, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        Student Name:
                        @Html.EditorFor(model => model.StudentName, new { htmlAttributes = new { @class = "form-control", placeholder = "Name" } })
                        @Html.ValidationMessageFor(model => model.StudentName, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        Student Address:
                        @Html.EditorFor(model => model.StudentAddress, new { htmlAttributes = new { @class = "form-control", placeholder = "Address" } })
                        @Html.ValidationMessageFor(model => model.StudentAddress, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        Student Image:
                        <div class="input-group">
                            <input type="file" name="imgfile" id="imgfile" class="form-control" onchange="displaySelectedFileName(this)" />
                        </div>
                        <input type="text" class="form-control" id="selectedFileName" readonly placeholder="No file chosen" />
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Create</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


<div class="text-center mt-3">
    @Html.ActionLink("Back to List", "ViewStudents", null, new { @class = "btn btn-secondary" })
</div>
