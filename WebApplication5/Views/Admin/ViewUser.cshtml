@model IEnumerable<WebApplication5.Models.User>

@{
    ViewBag.Title = "View All Faculty";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}
<center>
    <h2>View All Users</h2>
</center>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Email</th>
                <th>Password</th>
                <th>UserType</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.Password)</td>
                    <td>@Html.DisplayFor(modelItem => item.UserType)</td>
                    <td>
                        <div class="btn-group" role="group">
                            @Html.ActionLink("Edit", "EditUser", new { id = item.UserId }, new { @class = "btn btn-primary btn-sm" })
                            <span class="mx-1"></span> <!-- Add some gap between buttons -->
                            @using (Html.BeginForm("DeleteUser", "Admin", FormMethod.Post, new { onsubmit = "return confirm('Are you sure you want to delete this faculty member?');" }))
                            {
                                @Html.Hidden("id", item.UserId)
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
