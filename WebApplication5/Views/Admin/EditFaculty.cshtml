@model WebApplication5.Models.Faculty

@{
    ViewBag.Title = "Edit Faculty";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<center>
    <h2>Edit Faculty Information</h2>
</center>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

@using (Html.BeginForm("EditFaculty", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="form-container">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <label>Faculty Name</label>
                        @Html.EditorFor(model => model.FacultyName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FacultyName, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Faculty Email</label>
                        @Html.EditorFor(model => model.FacultyEmail, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FacultyEmail, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Faculty Address</label>
                        @Html.EditorFor(model => model.FacultyAddress, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FacultyAddress, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <label>Faculty Phone</label>
                        @Html.EditorFor(model => model.FacultyPhone, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FacultyPhone, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Save Changes</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="text-center">
    @Html.ActionLink("All Faculty", "ViewFaculty", null, new { @class = "btn btn-secondary mt-3" })
</div>
