@model WebApplication5.Models.Student

@{
    ViewBag.Title = "Student Dashboard";
    Layout = "~/Views/Shared/LayoutPage.cshtml";
}

<div class="container mt-4">
    <!-- Student Profile Section -->
    <div class="row justify-content-center mb-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <strong class="card-title mb-3">Student Portal</strong>
                </div>
                <div class="card-body">
                    <div class="d-flex">
                        <div class="text-left mr-3">
                            <h5 class="mt-2 mb-1">Student ID: @Model.StudentId</h5> <!-- Display Student ID -->
                            <h5 class="mt-2 mb-1">Student Name: @Model.StudentName</h5>
                            <h5 class="mt-2 mb-1">Phone: @Model.StudentPhone</h5>
                        </div>
                        <div class="mx-auto d-block">
                            @if (!string.IsNullOrEmpty(Model.StudentImage))
                            {
                                <img src="@Url.Content(Model.StudentImage)" alt="Student Image" style="width: 100px; height: 100px; border-radius: 50%;" />
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Widgets Section -->
<div class="row justify-content-center mb-4">
    <!-- Assignment Section -->
    <div class="col-md-4">
        <div class="card h-100 d-flex flex-column">
            <div class="card-body">
                <div class="stat-widget-one">
                    <a href="~/Assets/assignment.png">
                        <img class="stat-icon dib" src="~/Assets/assignment.png" alt="Assignment Icon" style="width: 50px; height: 50px;">
                    </a>
                    <div class="stat-content dib">
                        <div class="stat-text">Next Assignment Due in</div>
                        <div class="stat-digit">@ViewBag.NextTestRemainingTime</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- CGPA Section -->
    <div class="col-md-4">
        <div class="card h-100 d-flex flex-column">
            <div class="card-body">
                <div class="stat-widget-four">
                    <div class="stat-icon dib">
                        <i class="ti-stats-up text-muted"></i>
                    </div>
                    <div class="stat-content">
                        <div class="text-left dib">
                            <div class="stat-heading">Current CGPA</div>
                            <div class="stat-text">@ViewBag.TotalCGPA</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Fee Section -->
    <div class="col-md-4">
        <div class="card h-100 d-flex flex-column">
            <div class="card-body">
                <div class="stat-widget-one">
                    <div class="stat-icon dib"><i class="ti-money text-success border-success"></i></div>
                    <div class="stat-content dib">
                        <div class="stat-text">Fee Remaining</div>
                        <div class="stat-digit">FEE MODULE COMING SOON!</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-5">
    <div class="row justify-content-center">
        <!-- First Line of Buttons -->
        <div class="col-md-3 d-flex flex-column">
            @Html.ActionLink("Your Courses", "GetEnrolledCourses", "Student", null, new { @class = "btn btn-primary btn-lg mb-3" })
            @Html.ActionLink("View Schedule", "StudentSchedule", "Student", null, new { @class = "btn btn-primary btn-lg mb-3" })
        </div>

        <!-- Second Line of Buttons -->
        <div class="col-md-3 d-flex flex-column">
            @Html.ActionLink("Self Registration", "RegisterClasses", "Student", null, new { @class = "btn btn-primary btn-lg mb-3" })
            @Html.ActionLink("View All Test", "ViewTests", "Student", null, new { @class = "btn btn-primary btn-lg mb-3" })
        </div>

        <!-- Third Line of Buttons -->
        <div class="col-md-3 d-flex flex-column">
            @Html.ActionLink("View Your Marks", "ViewMarks", "Student", null, new { @class = "btn btn-primary btn-lg mb-3" })
            @Html.ActionLink("Grade History", "GradeHistory", "Student", null, new { @class = "btn btn-primary btn-lg mb-3" })
        </div>
    </div>
</div>

<style>
    .btn-primary {
        width: 100%;
    }
</style>
